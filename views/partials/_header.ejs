<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class="navbar-nav ml-auto">
        <div>
          <% if (username !== undefined) { %>
            <form method="POST" class="form-inline" action="/logout">
              <a class="navbar-text">Logged In As: <%= username %>!</a>
              <button type="submit" class="btn btn-outline-dark ml-3">Logout</button>
            </form>
          <% } else { %>
            <form method="POST" class="form-inline" action="/login">
              <input type="text" class="form-control mr-sm-2" name="username" placeholder="Username">
              <button type="submit" class="btn btn-outline-dark">Login</button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
</header>